{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true ,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@lib": ["./lib/index.ts"],
    }
  },
  "typedocOptions": {
    "entryPoints": ["global.d.ts", "sugarcube.d.ts", "src/setup.d.ts", "lib/index.ts"],
    "out": "gh-pages/docs",
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": ["node_modules", "gh-pages"]
}
